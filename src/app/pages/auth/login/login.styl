.auth-container
    width: 300px
    background-color: #f7fafb
    position: absolute
    top: calc(50% - 250px)
    left: calc(50% - 150px)
    border-radius: 10px

    .auth_tabs
        
        
        .sign-tab
            position relative
            float left
            width: 110px
            text-transform: uppercase
            text-align: center
            font-size: 16px
            padding: 20px
            line-height: 14px
            border-bottom: 2px solid #999999
           
            a
                text-decoration: none
                cursor pointer
                color: #999999
            &.active
                border-bottom: 2px solid #FF8383 
                a 
                    color: #FF8383   
    .login-form
        input 
            position: relative
            float: left
            width: 90%
            border: none 
            border-bottom: 1px solid #B0BEC5
            outline: none
            margin: 5%
            padding: 10px 0px
            height: 5px
            background-color: transparent
            &.wrong
                border: 1px solid red
        a 
            position relative
            margin-top: 0px
            margin-left: 33%
            text-decoration: none
            color: #999999
            float left
        button
            width: 120px
            text-align: center
            border-radius: 8px
            background-color: #ff7783
            box-shadow: 0px 2px 20px 2px #fbb8bf
            position relative
            float left
            border: none 
            margin-left: 90px
            margin-top: 20px
            margin-bottom: 10px
            cursor: pointer
            padding: 15px 30px
            color: #ffffff
            outline: none