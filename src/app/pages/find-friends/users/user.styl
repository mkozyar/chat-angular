.user-profile
    height 100%
    width: 100%
    overflow: auto
    padding-right: 20px
    .user-deteil-wrap
        display: flex
        align-items: center
        flex-wrap: wrap
        justify-content: space-around
        margin-top: 100px
        margin-bottom: 100px
        img 
            border-radius: 30%
            width: 250px
            float: left
        @media(max-width: 600px)    
            img 
                width: 150px
        .user-detail   
            font-size: 24px
            text-align: center
            line-height: 36px
            .user-name
                font-size: 36px
                font-weight: bold
    .add-friend
        margin: 0 auto
        margin-bottom: 50px
        width: 200px

        button
            text-align: center
            font-size: 25px
            font-weight: bold
            cursor: pointer
            &:hover
                background-color: #383c9a
                color: #ffffff
                border-width: 5px
        button
            &:disabled
                pointer-events: none;