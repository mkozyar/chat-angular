.user-profile
    
    .confirmation
        margin: 0 auto
        margin-bottom: 50px
        display: flex
        justify-content: center
        flex-direction: row-reverse
        flex-wrap: wrap
    
        button
            text-align: center
            font-size: 25px
            font-weight: bold
            cursor: pointer
            margin: 0 5%
            &:hover
                background-color: #383c9a
                color: #ffffff
                border-width: 5px
        @media(max-width: 600px)
            button
                margin-bottom: 10px    
            